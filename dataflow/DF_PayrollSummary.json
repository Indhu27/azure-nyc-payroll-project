{
	"name": "DF_PayrollSummary",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_SQL_Payroll2020",
						"type": "DatasetReference"
					},
					"name": "Source2020"
				},
				{
					"dataset": {
						"referenceName": "DS_SQL_Payroll2021",
						"type": "DatasetReference"
					},
					"name": "Source2021"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_SQL_PayrollSummary",
						"type": "DatasetReference"
					},
					"name": "SinkToSQLSummary"
				},
				{
					"dataset": {
						"referenceName": "DS_DataLake_Staging",
						"type": "DatasetReference"
					},
					"name": "SinkToDataLakeStaging"
				}
			],
			"transformations": [
				{
					"name": "StandardizeColumns"
				},
				{
					"name": "UnionPayrollData"
				},
				{
					"name": "FilterByYear"
				},
				{
					"name": "CalculateTotalPaid"
				},
				{
					"name": "AggregateByAgency"
				}
			],
			"scriptLines": [
				"parameters{",
				"     dataflow_param_fiscalyear as string (\"2020\")",
				"}",
				"source(output(",
				"          FiscalYear as integer,",
				"          PayrollNumber as integer,",
				"          AgencyID as string,",
				"          AgencyName as string,",
				"          EmployeeID as string,",
				"          LastName as string,",
				"          FirstName as string,",
				"          AgencyStartDate as date,",
				"          WorkLocationBorough as string,",
				"          TitleCode as string,",
				"          TitleDescription as string,",
				"          LeaveStatusasofJune30 as string,",
				"          BaseSalary as double,",
				"          PayBasis as string,",
				"          RegularHours as double,",
				"          RegularGrossPaid as double,",
				"          OTHours as double,",
				"          TotalOTPaid as double,",
				"          TotalOtherPay as double",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> Source2020",
				"source(output(",
				"          FiscalYear as integer,",
				"          PayrollNumber as integer,",
				"          AgencyCode as string,",
				"          AgencyName as string,",
				"          EmployeeID as string,",
				"          LastName as string,",
				"          FirstName as string,",
				"          AgencyStartDate as date,",
				"          WorkLocationBorough as string,",
				"          TitleCode as string,",
				"          TitleDescription as string,",
				"          LeaveStatusasofJune30 as string,",
				"          BaseSalary as double,",
				"          PayBasis as string,",
				"          RegularHours as double,",
				"          RegularGrossPaid as double,",
				"          OTHours as double,",
				"          TotalOTPaid as double,",
				"          TotalOtherPay as double",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> Source2021",
				"Source2021 select(mapColumn(",
				"          FiscalYear,",
				"          PayrollNumber,",
				"          AgencyId = AgencyCode,",
				"          AgencyName,",
				"          EmployeeID,",
				"          LastName,",
				"          FirstName,",
				"          AgencyStartDate,",
				"          WorkLocationBorough,",
				"          TitleCode,",
				"          TitleDescription,",
				"          LeaveStatusasofJune30,",
				"          BaseSalary,",
				"          PayBasis,",
				"          RegularHours,",
				"          RegularGrossPaid,",
				"          OTHours,",
				"          TotalOTPaid,",
				"          TotalOtherPay",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> StandardizeColumns",
				"Source2020, StandardizeColumns union(byName: true)~> UnionPayrollData",
				"UnionPayrollData filter(FiscalYear == 2020 || FiscalYear == 2021) ~> FilterByYear",
				"FilterByYear derive(TotalPaid = toDecimal(RegularGrossPaid) + toDecimal(TotalOTPaid) + toDecimal(TotalOtherPay)) ~> CalculateTotalPaid",
				"CalculateTotalPaid aggregate(groupBy(FiscalYear,",
				"          AgencyName),",
				"     TotalPaid = sum(TotalPaid)) ~> AggregateByAgency",
				"AggregateByAgency sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          FiscalYear as integer,",
				"          AgencyName as string,",
				"          TotalPaid as double",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     truncate:true,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> SinkToSQLSummary",
				"AggregateByAgency sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     truncate: true,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SinkToDataLakeStaging"
			]
		}
	}
}